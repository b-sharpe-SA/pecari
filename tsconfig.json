{
    "compilerOptions": {
        "module": "commonjs",
        "strict": true,
        "target": "ES2022",
        "declaration": true,
        "esModuleInterop": true,
        "outDir": "./dist",
        "useDefineForClassFields": false,
        "baseUrl": ".",
        "resolveJsonModule": true,
        "paths": {
            "@helpers": ["src/helpers"],
            "@ressources": ["src/ressources"],
            "@client": ["src/client"],
            "@types": ["src/types"],
            "@trackers": ["src/trackers"],
            "@constants": ["src/constants"]
        }
    },
    "include": ["src/**/*"]
}
